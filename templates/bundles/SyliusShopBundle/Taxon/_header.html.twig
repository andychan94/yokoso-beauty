{% include '@SyliusShop/Taxon/_breadcrumb.html.twig' %}

{{ sonata_block_render_event('sylius.shop.taxon.header.before', {'taxon': taxon}) }}

<h1 class="ui monster section header">
    {{ taxon.name }}
</h1>
{% if taxon.children | length > 0 %}
    <div class="ui grid container bottom-small-margin">
        {% for childTaxon in taxon.children %}
            <div class="four wide widescreen four wide computer five wide tablet sixteen wide mobile column no-v-padding">
                <a href="{{ path('sylius_shop_product_index', {'slug': childTaxon.slug, '_locale': childTaxon.translation.locale}) }}"
                   tabindex="0">
                    {{ childTaxon.name }}
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}

{{ sonata_block_render_event('sylius.shop.taxon.header.after', {'taxon': taxon}) }}
